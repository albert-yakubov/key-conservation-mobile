<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageButton
        android:id="@+id/imagebutton_update_profile"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:src="@drawable/gcheck"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/key_full_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/white"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.012"
        tools:layout_editor_absoluteX="0dp">


        <EditText
            android:id="@+id/edittext_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125dp"
            android:hint="facebook" />

        <EditText
            android:id="@+id/edittext_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="67dp"
            android:hint="twitter" />

        <EditText
            android:id="@+id/edittext_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:hint="instagram" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="3dp">


        <EditText
            android:id="@+id/edittext_location"
            android:layout_width="135dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="344dp"
            android:hint="location" />

        <EditText
            android:visibility="invisible"
            android:id="@+id/edittext_lat"
            android:layout_width="107dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="342dp"
            android:hint="latitude"/>

        <EditText
            android:visibility="invisible"
            android:id="@+id/edittext_lon"
            android:layout_width="128dp"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="341dp"
            android:hint="longitude" />


        <EditText
            android:id="@+id/edittext_species"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/species"
            android:layout_alignParentStart="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="220dp"
            android:hint="@string/species_and_habitats" />

        <EditText
            android:id="@+id/edittext_minibio"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="291dp"
            android:hint="@string/mini_bio" />

        <EditText
            android:id="@+id/edittext_about_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="156dp"
            android:hint="About Us" />

        <EditText
            android:id="@+id/edittext_issues"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="95dp"
            android:hint="Issues" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>